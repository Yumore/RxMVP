<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:background="@color/common_color_white"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:paddingLeft="@dimen/common_padding_normal"
    android:paddingTop="@dimen/common_padding_small"
    android:paddingRight="@dimen/common_padding_normal"
    android:paddingBottom="@dimen/common_padding_small">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/item_content_image"
            android:layout_width="120dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="@dimen/common_padding_normal"
            android:layout_marginRight="@dimen/common_padding_normal"
            android:scaleType="centerCrop"
            android:visibility="gone"
            app:srcCompat="@drawable/icon_user_default"
            tools:visibility="visible" />

        <TextView
            android:id="@+id/item_content_text"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:ellipsize="end"
            android:gravity="center_vertical"
            android:maxLines="3"
            tools:text="@string/common_content_tips" />

    </LinearLayout>

    <ImageView
        android:id="@+id/item_content_delete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        app:srcCompat="@mipmap/icon_delete_red" />
</RelativeLayout>